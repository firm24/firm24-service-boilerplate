{
  "name": "firm24-service-boilerplate",
  "version": "0.0.1",
  "description": "Firm24 Service boilerplate",
  "authors": [],
  "private": true,
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit --detectOpenHandles",
    "test:all": "npm run test:e2e && npm run test:cov"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/microservices": "^7.4.4",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.8.0",
    "@typegoose/typegoose": "^7.4.1",
    "amqp-connection-manager": "^3.2.1",
    "amqplib": "^0.6.0",
    "bcryptjs": "^2.4.3",
    "boolean": "^3.0.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cli-progress": "^3.9.0",
    "clone-buffer": "^1.0.0",
    "content-disposition": "^0.5.3",
    "convict": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "delay": "^4.4.0",
    "handlebars": "^4.7.6",
    "handlebars-helpers": "^0.10.0",
    "helmet": "^4.1.1",
    "ioredis": "^4.17.3",
    "locale-enum": "^1.1.1",
    "moment": "^2.29.0",
    "mongoose": "^5.10.7",
    "nanoid": "^3.1.22",
    "nodemailer": "^6.4.16",
    "pascal-case": "^3.1.2",
    "recaptcha2": "^1.3.3",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.3.3",
    "winston-transport-rollbar": "^2.4.0",
    "winston-transport-rollbar-3": "^3.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/axios": "^0.14.0",
    "@types/content-disposition": "^0.5.3",
    "@types/convict": "^5.2.1",
    "@types/delay": "^3.1.0",
    "@types/express": "^4.17.3",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/helmet": "0.0.48",
    "@types/ioredis": "^4.17.4",
    "@types/jest": "26.0.10",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.4.2",
    "node-mocks-http": "^1.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      ".module.ts$",
      ".spec.ts$"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
